<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
	version="1.0">
    <persistence-unit-metadata>
      <persistence-unit-defaults>
        <access>FIELD</access>
      </persistence-unit-defaults>
    </persistence-unit-metadata>
    <entity class="io.vlingo.symbio.store.object.PersistentObject">
      <table name="PERSON" />
      <inheritance strategy="SINGLE_TABLE"/>
      <attributes>
        <id name="persistenceId">
          <column name="PID"/>
        </id>
      </attributes>
    </entity>
    <entity class="io.vlingo.symbio.store.object.jdbc.jpa.Person">
      <named-query name="Person.allPersons">
        <query>SELECT p FROM Person p ORDER BY p.id ASC</query>
      </named-query>
      <attributes>
      <basic name="id">
        <column name="ID"/>
      </basic>
      <basic name="age">
        <column name="AGE" />
      </basic>
      <basic name="name">
        <column name="NAME" />
      </basic>
	</attributes>
  </entity>
</entity-mappings>
